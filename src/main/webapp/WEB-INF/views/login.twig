{% extends "layout/main.twig" %}


{% block title %}
    Zaloguj
{% endblock %}

{% block content %}
    {% set login = "/login" %}
    {% set register = "/register" %}

<!--login modal-->
<div class="container">
<div id="loginModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="text-center"><img src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" class="img-circle"><br>Witaj</h2>
            </div>
            <div class="modal-body">
                <form class="form col-md-12 center-block" action="{{ login }}" method="post">
                    <div class="form-group">
                        <input class="form-control input-lg" placeholder="Email" type="text" name="username">
                    </div>
                    <div class="form-group">
                        <input class="form-control input-lg" placeholder="Hasło" type="password" name="password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Zaloguj</button>
                        <span class="pull-right"><a href="{{ register }}">Rejestracja</a></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="col-md-12">
                    {% if error %}
                        <div >
                            {{ error }}
                        </div>
                    {% endif %}

                    {% if logout %}
                        <div>
                            {{ logout }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
</div>

    <h1>Założone konta:</h1>
        <ul>
            <li> Email: user  Hasło: password </li>
    {% if accounts %}
            {% for account in accounts %}
                <li> Email: {{ account.email }}  Hasło: {{ account.password }}</li>
            {% endfor %}
    {% endif %}
        </ul>

{% endblock %}