{% extends "layout/main.twig" %}

{% block title %}
    Zarejestruj
{% endblock %}

{% block footer %}
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
    <script type="text/javascript" src="{{ asset 'js/app.js' }}"></script>
{% endblock %}

{% block content %}
    <!--login modal-->
    <div class="container">
        <div id="loginModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="text-center">Zarejestruj nowe konto</h2>
                    </div>
                    <div class="modal-body">
                        <form class="form col-md-12 center-block" action="/register" method="post">
                            <div class="form-group">
                                <input class="form-control input-lg" type="text" id="email" name="email" path="email" placeholder="Email" value="{{ email }}">
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" type="password" id="password" name="password" path="password" placeholder="Hasło" value="{{ password }}">
                            </div>
                            <div class="form-group">
                                <input class="form-control input-lg" type="password" id="passwordConfirm" name="passwordConfirm" path="passwordConfirm" placeholder="Powtórz hasło" value="{{ passwordConfirm }}">
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                  <input type="checkbox" id="acceptTerms" name="acceptTerms" path="acceptTerms"  > <a href="/terms">Regulamin</a>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary btn-lg btn-block">Zarejestruj</button>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <div class="col-md-12">
                            {% if error %}
                                <p style="color: red; text-align: center; font-weight: bold">{{ error }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}